<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/_40sdp"
    android:paddingEnd="@dimen/_40sdp">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        app:srcCompat="@drawable/ic_no_internet_connection" />

    <com.sadadsdk.utils.TextViewRobotoBold
        style="@style/smallWhiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="@string/str_whoops"
        android:textColor="@color/colorBlack" />

    <com.sadadsdk.utils.TextViewRobotoBold
        style="@style/smallWhiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/str_no_internet_connection_found_check_your_connection_or_try_again"
        android:textColor="@color/colorBlack" />

    <com.sadadsdk.utils.ButtonRobotoBold
        android:id="@+id/btnTryAgain"
        style="@style/smallWhiteText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/str_try_again"
        android:textAllCaps="false"
        android:theme="@style/buttonStyle" />

</LinearLayout>